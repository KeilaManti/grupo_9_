<!DOCTYPE html>
<!DOCTYPE html>
<html lang="es">

<%- include("../partials/headAdmin.ejs")  %>
<head>
    <link rel="stylesheet" href="/css/admin/admin.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include("../partials/sidebarAdmin.ejs")  %> 
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Editar administrador</h2>
                </div>
            </nav>

            <div style="padding-bottom: 24px;" class="container-fluid px-4">

                <form id="form" class="row g-3" action="/admin/users/editAdmin/<%- user.id %>?_method=PUT" method="POST">
                    <div class="col-12">
                        <label for="inputName" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="inputName" name="name" value="<%= user.name %>">                
                        <span id="nameErrors" class="fileErrors" style="color: red;"></span>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="text" class="form-control" id="inputEmail" name="email" value="<%= user.email %>">
                        <span id="emailErrors" class="fileErrors"></span>
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <label for="inputPass" class="form-label">Contraseña actual</label>
                        <input type="password" class="form-control" id="inputPass" name="pass" value="">
                        <span id="passError" class="fileErrors"></span><br>
                        <% if (locals.errors && errors.pass) { %>
                            <small class="errorred" style="color: red"><%= errors.pass.msg %> </small>
                        <% } %>
                        <a id="viewPasswordAdmin"style="cursor: pointer;">Mostrar contraseña</a>
                    </div>

                    <div class="col-sm-12 col-md-12">
                        <label for="inputNewPass" class="form-label">Nueva contraseña</label>
                        <input type="password" class="form-control" id="pass1" name="pass1">
                        <span id="passErrors" class="fileErrors"></span>
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <label for="inputPassAgain" class="form-label">Repetir contraseña</label>
                        <input type="password" class="form-control" id="pass2" name="pass2">
                        <span id="pass2Errors" class="fileErrors"></span><br>
                        <a id="viewNewPass" style="cursor: pointer;">Mostrar contraseña</a>
                        
					<% if (locals.errors && errors.pass2) { %>
						<small class="errorred"style="color: red"><%= errors.pass2.msg %></small>
					<% } %>
                    </div>
                    <% if (locals.errorMsg ) { %>
                            <small style="color: red"><%= errorMsg %> </small>
                    <% } %>

                    <span id="submitErrors" style="color: red;"></span>
                    <button type="submit" class="btn btn-primary">
                        EDITAR
                    </button>
                </form>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

    <%- include("../partials/scriptAdmin.ejs")  %>
    <script src="/js/validaciones/validationsAdmin.js"></script>
	<script src="/js/showPasswordAdmin.js"></script>

</body>

</html>
