<!DOCTYPE html>
<html lang="es">

<%- include("../partials/headAdmin.ejs")  %>
<head>
    <link rel="stylesheet" href="/css/admin/admin.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include("../partials/sidebarAdmin.ejs")  %> 
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Agregar categoria</h2>
                </div>
            </nav>

            <div style="padding-bottom: 24px;" class="container-fluid px-4">

                <form id="form" class="row g-3" action="/admin/category/create" method="POST">
                    <div class="col-12">
                        <label for="inputName" class="form-label">Nueva categoria</label>
                        <input type="text" class="form-control" id="inputName" name="category">
                        <span id="nameErrors" class="fileErrors"></span>
                    </div>
                    <span id="submitErrors" style="color: red;"></span>
                    <button type="submit" class="btn btn-primary">
                        CREAR
                    </button>
                </form>
                <h2 class="mt-5">Categorias</h2>
                <table class="table table-striped table-sm ">
                    <tbody>
                        <% category.forEach(categories => { %>
                            <tr>
                                <td><i class="fas fa-circle"></i><span class="m-3"><%= categories.category %></span></td>
                                <td>
                                    <form action="/admin/category/create/<%= categories.id %>?_method=PUT" method="POST" onsubmit="return confirm('Â¿Esta seguro de querer eliminar esta categoria?')">
                                        <input type="text" name="category" class="d-none">
                                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

    <%- include("../partials/scriptAdmin.ejs")  %>

    <script src="/js/validaciones/validationsCatBrand.js"></script>
</body>

</html>