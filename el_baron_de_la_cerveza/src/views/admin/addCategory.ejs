<!DOCTYPE html>
<html>

	<%- include("../partials/headAdmin") %>
<body>
	

	<%- include("../partials/sidebarAdmin") %>
	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin">
		<h2>Agregar Categoria</h2>
        <form class="row g-3" action="/admin/category/create" method="POST">
            <div class="col-12">
                <label for="inputName" class="form-label">Nueva categoria</label>
                <input type="text" class="form-control" id="inputName" name="category">
                
            </div>
            <button type="submit" class="btn btn-primary">
                CREAR
            </button>
        </form>
        <h2 class="mt-5">Categorias</h2>
        <table class="table table-striped table-sm ">
            <tbody>
                <% category.forEach(categories => { %>
                    <tr>
                        <td><i class="fas fa-circle"></i><span class="m-3"><%= categories.category %></span></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
	</main>
</body>
</html>