<!DOCTYPE html>
<html lang="es">

<%- include("../partials/headAdmin.ejs")  %>
<head>
    <link rel="stylesheet" href="/css/admin/admin.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <%- include("../partials/sidebarAdmin.ejs")  %> 
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0"><%= user.name %></h2><br>
				</div>
            </nav>
			
            <div style="padding-bottom: 24px;" class="container-fluid px-4">
                <div class="table-responsive">
					<table class="table table-striped table-sm">
						<thead>
							<tr>
						  		<th scope="col">Nombre</th>
						  		<th scope="col">Email</th>
						  		<th scope="col">Telefono</th>
						  		<th scope="col">Fecha</th>
							</tr>
					  	</thead>
					  	<tbody>
							<tr>
								<td><%= user.name %></td>
								<td><%= user.email %></td>
                                
                              <% user.contacts.forEach(contact => { %>
								<td><%= contact.phone %></td>
                                <% }) %>
                                <td>20/11/2021</td>
							</tr>
						</tbody>
					</table>
                    <h3>Datos de contacto</h3>
                    <table class="table table-striped table-sm">
						<thead>
							<tr>
						  		<th scope="col">Provincia</th>
						  		<th scope="col">Ciudad</th>
						  		<th scope="col">Direcci√≥n</th>
							</tr>
					  	</thead>
					  	<tbody>
                              <% user.contacts.forEach(contact => { %>
							<tr>
                                
								<td><%= contact.province %></td>
								<td><%= contact.city %></td>
								<td><%= contact.street %></td>
							</tr>
                            <% }) %>
						</tbody>
					</table>

                    <h3>Historial de compras</h3>
                    <table class="table table-striped table-sm">
						<thead>
							<tr>
						  		<th scope="col">Nombre</th>
						  		<th scope="col">Cantidad</th>
						  		<th scope="col">Fecha</th>
							</tr>
					  	</thead>
					  	<tbody>
                            <tr>
								<td>Cerveza pack 6 - Brahma</td>
                                <td>3</td>
								<td>21/11/2021</td>
							</tr>
						</tbody>
					</table>
				</div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <%- include("../partials/scriptAdmin.ejs")  %>
	<script src="/js/alerts.js"></script>
</body>

</html>