<!DOCTYPE html>
<html>

	<%- include("../partials/headAdmin") %>
<body>
	
	<%- include("../partials/headerAdmin")%>

	<%- include("../partials/sidebarAdmin") %>

	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
		<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		  <h1 class="h2">Administrador</h1>
		</div>
		<div class="table-responsive">
		<table class="table table-striped table-sm">
		  <thead>
			<tr>
			  <th scope="col">Imagen</th>
			  <th scope="col">Nombre</th>
			  <th scope="col">Precio</th>
			  <th scope="col">Acciones</th>
			</tr>
		  </thead>
		  <tbody>
                  <% products.forEach(adminproducts => { %>
                    <tr>
                        <td><img src="/img/productos/<%= adminproducts.imagen %>" style="width: 90px;"></td>
                        <td><%- adminproducts.name%></td>
                        <td><%= adminproducts.precio %></td>
                        <td>
                            <a class="btn btn-warning" href="/admin/products/edit/<%- adminproducts.id %>">
								<i class="fas fa-pen"></i>
							</a>
                            <form action="/admin/products/delete/<%- adminproducts.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Â¿Esta seguro de querer eliminar la Cerveza <%= adminproducts.name %>?')">
								<button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
							</form>
                        </td>
                      </tr>
                  <% }) %>
              </tbody>
		</table>
	  </div>
	  </main>
	</div>
  </div>

</body>
</html>