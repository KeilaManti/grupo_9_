<!DOCTYPE html>
<html>
	<%- include("../partials/headAdmin") %>
<body>

	<%- include("../partials/sidebarAdmin") %>

	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin">
		<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		  <h1 class="h2">Administrador</h1>
		</div>
		<div class="table-responsive">
			<b>Cantidad de productos: <%- product.length %></b>
			
		<table class="table table-striped table-sm">
		  <thead>
			<tr>
			  <th scope="col">Imagen</th>
			  <th scope="col">Nombre</th>
			  <th scope="col">Precio</th>
			  <th scope="col">Acciones</th>
			</tr>
		  </thead>
		  <tbody>
                  <% product.forEach(adminproducts => { %>
                    <tr>
						<% if(!adminproducts.images){ %>
							<td><img src="/img/productos/default-img.gif" style="width: 50px;"></td>
						<% }else{ %>
							<td><img src="/img/productos/<%= adminproducts.images %>" style="width: 50px;"></td>
						<% } %>
                        <td><%- adminproducts.name%> <%- adminproducts.trademark%></td>
                        <td><%= adminproducts.price %></td>
                        <td>
                            <a class="btn btn-warning" href="/admin/products/edit/<%- adminproducts.id %>">
								<i class="fas fa-pen"></i>
							</a>
                            <form action="/admin/products/delete/<%- adminproducts.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Â¿Esta seguro de querer eliminar la Cerveza <%= adminproducts.name %>?')">
								<button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
							</form>
                        </td>
                      </tr>
                  <% }) %>
              </tbody>
		</table>
	  </div>
	  </main>
	</div>
  </div>

</body>
</html>