<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs') %>
<body class="body_login">
	<main class="main_login">
		<div class="contenedor_login">
			<section class="seccion_login">
				<div class="div_nombre">
					<div class="nombre_pagina">
						<img src="/img/icons/icon-title2.png">
					</div>
				</div>

				<div class="div_frase">
					Comprá tu cerveza ya
				</div>

				<!-- Barra separadora -->
				<div class="div_barra">
					<hr>
					o
					<hr>
				</div>

				<div class="div_continput">
					<div class="div_input">
						<form  id="form" action="/users/register" method="POST" enctype="multipart/form-data">
							<h2>Registrese</h2>
							<p>
								<input type="text" id="name" name="name" placeholder="Nombre" value="<%= locals.old && old.name %>">
								<span id="nameErrors" style="color: red"></span>
								<% if (locals.errors && errors.name) { %>
									<small class="errorred" style="color: red;"><%= errors.name.msg %></small>
								<% } %>
							</p>
							<p>
								<input type="email" id="email" name="email" placeholder="Ingresá tu email" value="<%= locals.old && old.email %>">
								<span id="emailErrors" style="color: red"></span>
								<% if (locals.errors && errors.email) { %>
									<small class="errorred" style="color: red;"><%= errors.email.msg %></small>
								<% } %>
							</p>
							<p>
								<input type="password" id="pass" name="pass1" placeholder="Contraseña">
								<span id="passErrors" style="color: red"></span>
								<% if (locals.errors && errors.pass1) { %>
									<small class="errorred" style="color: red;"><%= errors.pass1.msg %> </small>
								<% } %>
							</p>
							<p>
								<input type="password" id="pass2" name="pass2" placeholder="Repetir contraseña">
								<span id="pass2Errors" style="color: red;"></span>
								<% if (locals.errors && errors.pass2) { %>
									<small class="errorred" style="color: red;"><%= errors.pass2.msg %></small>
								<% } %>
							</p>
							<span id="submitErrors" style="color: red;"></span>
							<div class="div_botoning">
								<button>Registrarse</button>
							</div>
						</form>
					</div>
				</div>
				
				<div class="div_crearcuenta">
					¿Ya tenes cuenta? <a href="/users/login">Inicia Sesión</a>
				</div>
				<!-- Barra separadora -->
				<div class="div_barra">
					<hr>
					o
					<hr>
				</div>

				<div class="div_ingfacebook">
					<a href="">
						<i class="fab fa-facebook"></i>
						Ingresa con Facebook
					</a>
				</div> 

			</section>
			<section class="seccion_imagen">
			</section>
		</div>
	</main>
	<script src="/js/validaciones/frontRegister.js"></script>
</body>
</html>