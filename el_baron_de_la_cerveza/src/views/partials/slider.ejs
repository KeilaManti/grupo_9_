<section class="slider-products">
		<h2 class=" wow animate__animated animate__bounceInUp animate__delay-.5s"><%= titleSlider %></h2>
		
		<div class="carousel main-carousel" data-flickity='{ "groupCells": true }'>
			<% destacadosSlider.forEach(product => { %>
			  <div class="carousel-cell  wow animate__animated animate__bounceInUp animate__delay-.8s">
			    <article class="br">
					<a href="/products/productDetail/<%= product.id %>">
						<% if(product.discount){ %>
							<span class="off">
								<%= product.discount %>%Off 
							</span>
						<% } %>
						<img src="/img/productos/<%= product.images %>" class="imagen-producto">
					</a>
					<div class="detalles-articulos">
						<span>$<%= product.price %></span>
						<p><%= product.name %></p>
						<b>  <%= product.trademark %>  
							<% if(product.alcoholContent){ %>
								/ <%= product.alcoholContent %> % ALC /
							<% } %>
						</b>
						<button class="btn-add" alt="Agregar al carrito"><i class="fas fa-shopping-cart"></i></button>
					</div>
					<div class="boton-comprar">
						<button class="btn-buy br">Comprar</button>
					</div>
				</article>
			  </div>
		  <% }) %>
		</div>
	</section>